<?xml version="1.0" encoding="utf-8"?>

<!--
Отвечает за детализацию типа задачи(можно редактировать, удалять и т.д.)
-->
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="15dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/task_group_name"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="@string/create_task_group_title"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/create_task_group_priority_text"
        android:layout_width="254dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="@string/create_task_group_priority"
        android:inputType="numberSigned" />
</LinearLayout>
